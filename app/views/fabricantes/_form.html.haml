= form_for @fabricante do |f|
  - if @fabricante.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fabricante.errors.count, "error")} prohibited this fabricante from being saved:"
      %ul
        - @fabricante.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome
    = f.text_field :nome
  .actions
    = f.submit 'Salvar'
